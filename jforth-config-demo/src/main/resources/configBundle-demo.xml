<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <import resource="configBundle.xml"/>
    <bean class="org.xforth.config.context.DistributedPropertyPlaceholderConfigurer">
        <property name="configBundle" ref="configBundle"/>
    </bean>
    <bean id="configBundle" class="org.xforth.config.client.ConfigBundle">
        <constructor-arg index="0" value="app1"/>
        <constructor-arg index="1" value="config.properties"/>
        <constructor-arg index="2" value="172.16.3.27:2181"/>
        <constructor-arg index="3" value="true"/>
    </bean>
    <context:component-scan base-package="org.xforth.config.demo" />
</beans>